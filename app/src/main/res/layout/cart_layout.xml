<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        >
        
        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="9"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cart_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|start"
                android:textAllCaps="true"
                android:layout_marginLeft="10dp"
                android:text="Food Item name"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:text="Quantity: "
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical|start"/>
                <TextView
                    android:id="@+id/cart_item_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:text="Quantity"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:weightSum="1">
                    <TextView
                        android:id="@+id/cart_item_price_per_pc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|start"
                        android:textAllCaps="true"
                        android:layout_marginLeft="10dp"
                        android:text="Price per pc"
                        />

                <TextView
                    android:text="/pc"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button

                    android:id="@+id/subtract_cart_button"
                    android:layout_width="45dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="110dp"
                    android:background="@drawable/ic_remove_circle_outline_black_24dp"

                    />
                <Button
                    android:id="@+id/add_cart_button"
                    android:layout_width="45dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_add_circle_outline_black_24dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/cart_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|start"
                android:textAllCaps="true"
                android:layout_marginLeft="10dp"
                android:text="Food Item total price"
                />




        </LinearLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>